doctype html
html
  head
    meta(charset = 'utf-8')
  body
    h1
      a(href='/topic') Server Side JavaScript
    ul
      each topic in topics
        li
          - rid = encodeURIComponent(topic['@rid'])
          a(href='/topic/'+rid)= topic.title
    article
      if topic
        h2= topic.title
        = topic.description
        div= 'by '+topic.author
      else
        h2 Welcome
        | This is sever side javascript tutorial.
    p
    ul
      li
        a.button(href='/topic/add') Add
      if topic
        -rid = encodeURIComponent(topic['@rid']);
        li
          a.button(href='/topic/'+rid+'/edit') Edit
        li
          a.button(href='/topic/'+rid+'/delete') Delete
